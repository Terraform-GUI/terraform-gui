# - RDS VARIABLES ------------------------------------------------------ #

variable "{{ variables.unique_label }}" {
  type = map(string)
  default = {
    type                = "{{ variables.type|default("db.t3.micro")|escape }}"
    engine              = "{{ variables.engine|escape }}"
    version             = "{{ variables.version|escape }}"
    family              = "{{ variables.family|escape }}"
    username            = "{{ variables.username|escape }}"
    password            = "{{ variables.password|escape }}"
    publicly_accessible = {{ variables.publicly_accessible|default("false") }}
    skip_final_snapshot = {{ variables.skip_final_snapshot|default("true") }}
  }
}
